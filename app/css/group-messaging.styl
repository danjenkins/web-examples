@import "_shared";

* {
	box-sizing: border-box;
}

html,
body {
	height: 100%;
	margin: 0;
	padding: 0;
}

.group-list,
.group-list--is-open {
	background: #fff;
	box-shadow: 2px 0 2px rgba(0, 0, 0, .1);
	min-height: 100%;
	left: -80%;
	position: absolute;
	transition: left .5s;
	top: 0;
	width: 80%;
	z-index: 5;

	@media (min-width: 45em) {
		flex: 0 15rem;
		left: 0;
		max-height: 100%;
		min-height: 0;
		overflow-y: auto;
		position: relative;
	}
}

.group-list--is-open {
	left: 0;
}

.group-list-open,
.group-list-close {
	@media (min-width: 45em) {
		display: none;
	}
}

.group-chat {
	padding: 1rem;

	@media (min-width: 45em) {
		flex: 1 auto;
		position: relative;
	}

	&__form {
		@extends $inlineForm;

		@media (min-width: 45em) {
			bottom: 1rem;
			margin: -1rem;
			padding: 1rem;
			position: absolute;
			width: 100%;
		}
	}
}

.chat-window {
	@media (min-width: 45em) {
		align-items: stretch;
		display: flex;
		height: 100%;
	}
}