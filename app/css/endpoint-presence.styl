@import "_shared";

$availableColor = #00d76b;
$awayColor = #ff9100;
$busyColor = #da0326;
$dndColor = #666;

.ep-handle {
	font-size: 1.5rem;
	font-weight: normal;
}

.ep-status-dropdown {
	position: relative;

	&:hover {
		.ep-status-dropdown__status--available,
		.ep-status-dropdown__status--away,
		.ep-status-dropdown__status--busy,
		.ep-status-dropdown__status--dnd {
			opacity: 1;
		}
	}

	&__status--available,
	&__status--away,
	&__status--busy,
	&__status--dnd,
	&__status__select {
		height: 3rem;
		line-height: 3rem;
	}

	&__status--available,
	&__status--away,
	&__status--busy,
	&__status--dnd {
		background-color: #fff;
		border-radius: 1rem;
		box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
		opacity: .7;
		padding: 0 1rem;
		position: relative;
		transition: opacity .1s;
		z-index: 1;

		&:after {
			border-radius: .75rem;
			content: "";
			display: inline-block;
			height: .75rem;
			margin-left: .5rem;
			width: .75rem;
		}

		&:before {
			border-left: .6rem solid transparent;
			border-right: .6rem solid transparent;
			border-top: .6rem solid #323232;
			content: "";
			display: block;
			height: 0;
			position: absolute;
			right: 1rem;
			top: 1.25rem;
			width: 0;
		}
	}

	&__status--available:after {
		background-color: $availableColor;
	}

	&__status--away:after {
		background-color: $awayColor;
	}

	&__status--busy:after {
		background-color: $busyColor;
	}

	&__status--dnd:after {
		background-color: $dndColor;
	}

	&__status__select {
		border: none;
		cursor: pointer;
		display: block;
		left: 0;
		opacity: 0;
		position: absolute;
		top: 0;
		width: 100%;
		z-index: 2;
	}
}

.ep-status-list {
	list-style: none;
	margin: 0;
	padding: 0;

	&__user {
		background-color: #fff;
		border-bottom: 1px solid #dfdfdf;
		box-shadow: 1px 1px 2px rgba(0, 0, 0, .2);
		min-height: 3.1875rem;
		padding: 1rem 1rem 1rem 5rem;
		position: relative;

		&:first-child {
			border-radius: .5rem .5rem 0 0;
		}

		&:last-child {
			border-radius: 0 0 .5rem .5rem;
			border-bottom: none;
		}
	}

	&__user__avatar {
		left: 1rem;
		position: absolute;
		top: 1rem;
	}

	&__user__name {
		font-size: 1.35rem;
	}

	&__user__status--available,
	&__user__status--away,
	&__user__status--busy,
	&__user__status--dnd {
		color: #999;
		font-size: .875rem;
		margin-top: .15rem;

		&:after {
			border-radius: .75rem;
			content: "";
			display: inline-block;
			height: .75rem;
			margin-left: .35rem;
			position: relative;
			top: .1rem;
			width: .75rem;
		}
	}

	&__user__status--available:after {
		background-color: $availableColor;
	}

	&__user__status--away:after {
		background-color: $awayColor;
	}

	&__user__status--busy:after {
		background-color: $busyColor;
	}

	&__user__status--dnd:after {
		background-color: $dndColor;
	}
}