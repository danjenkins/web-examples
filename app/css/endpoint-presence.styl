@import "_shared";

.ep-handle {
	font-size: 1.5rem;
	font-weight: normal;
}

.ep-status-dropdown {
	position: relative;

	&:hover {
		.ep-status-dropdown__status--available,
		.ep-status-dropdown__status--away,
		.ep-status-dropdown__status--busy,
		.ep-status-dropdown__status--dnd {
			opacity: 1;
		}
	}

	&__status--available,
	&__status--away,
	&__status--busy,
	&__status--dnd,
	&__status__select {
		height: 3rem;
		line-height: 3rem;
	}

	&__status--available,
	&__status--away,
	&__status--busy,
	&__status--dnd {
		background-color: #fff;
		border-radius: 1rem;
		box-shadow: 0 1px 2px rgba(0, 0, 0, .2);
		opacity: .7;
		padding: 0 1rem;
		position: relative;
		transition: opacity .1s;
		z-index: 1;

		&:after {
			border-radius: .75rem;
			content: "";
			display: inline-block;
			height: .75rem;
			margin-left: .5rem;
			width: .75rem;
		}

		&:before {
			border-left: .6rem solid transparent;
			border-right: .6rem solid transparent;
			border-top: .6rem solid #323232;
			content: "";
			display: block;
			height: 0;
			position: absolute;
			right: 1rem;
			top: 1.25rem;
			width: 0;
		}
	}

	&__status--available:after {
		background-color: #00d76b;
	}

	&__status--away:after {
		background-color: #ff9100;
	}

	&__status--busy:after {
		background-color: #da0326;
	}

	&__status--dnd:after {
		background-color: #666;
	}

	&__status__select {
		border: none;
		cursor: pointer;
		display: block;
		left: 0;
		opacity: 0;
		position: absolute;
		top: 0;
		width: 100%;
		z-index: 2;
	}
}