	&__user__avatar {
		left: 1rem;
		position: absolute;
		top: 1rem;
	}

	&__user__name {
		font-size: 1.35rem;
	}

	&__user__status--available,
	&__user__status--away,
	&__user__status--busy,
	&__user__status--dnd,
	&__user__status--brb {
		color: #999;
		font-size: .875rem;
		margin-top: .15rem;

		&:after {
			border-radius: .75rem;
			content: "";
			display: inline-block;
			height: .75rem;
			margin-left: .35rem;
			position: relative;
			top: .1rem;
			width: .75rem;
		}
	}

	&__user__status--available:after {
		background-color: $availableColor;
	}

	&__user__status--away:after {
		background-color: $awayColor;
	}

	&__user__status--busy:after {
		background-color: $busyColor;
	}

	&__user__status--dnd:after {
		background-color: $dndColor;
	}

	&__user__status--brb:after {
		background-color: $brbColor;
	}
}